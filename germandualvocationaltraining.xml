<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GDVT Title -->
    <TextView
        android:id="@+id/GDVT_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="German Dual Vocational Training (GDVT)"
        android:textColor="#2247A0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"/>

    <!-- Mechatronics Section -->
    <TextView
        android:id="@+id/Mechatronics_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:text="Mechatronics"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GDVT_title"/>

    <TextView
        android:id="@+id/Mechatronics_explain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="As a mechatronics technician, you solve problems and optimize manufacturing processes using your skills in mechanical, electrical, and computer engineering. You ensure machines operate efficiently and troubleshoot any issues. With mechatronics skills in demand, this career path offers exciting job opportunities and job security."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Mechatronics_title"/>

    <Button
        android:id="@+id/Mechatronics_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F42F2F"
        android:text="READ MORE"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Mechatronics_explain"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Logistics Operation Management Section -->
    <TextView
        android:id="@+id/LOM_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:text="Logistics Operation Management"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Mechatronics_button"/>

    <TextView
        android:id="@+id/LOM_explain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="As a logistics manager, you manage transportation and storage, shipments, insurance, customs regulations and trade laws. You provide transport advice and optimize logistics operations for efficient supply chain management."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LOM_title"/>

    <Button
        android:id="@+id/LOM_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F42F2F"
        android:text="READ MORE"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LOM_explain"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Industrial Management Section -->
    <TextView
        android:id="@+id/IM_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:text="Industrial Management"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LOM_button"/>

    <TextView
        android:id="@+id/IM_explain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Develops skills in order processing, marketing, sales, purchasing, materials and HR management, logistics, finance and controlling for effective organizational performance."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IM_title"/>

    <Button
        android:id="@+id/IM_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F42F2F"
        android:text="READ MORE"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IM_explain"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
